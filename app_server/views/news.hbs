<!DOCTYPE html>
<!-- Website template by freewebsitetemplates.com -->
<html>
<head>
	<meta charset="UTF-8">
	<title>News - Travlr Getaways Website Template</title>
	<link rel="stylesheet" href="css/style.css" type="text/css">
</head>
<body>
	<div id="background">
		<div id="page">
			{{> header}}
			<div id="contents">
				<div class="box">
					<div>
						<div id="news" class="body">
							<div class="sidebar">
								<h3>Latest News</h3>
								<ul>
			{{#each newsItems}}
								<li>
									<a href="/news">{{this.name}}</a>
								</li>
			{{/each}}
								</ul>
								<h3>Vaction Tips</h3>
								<ul>
			{{#each tipItems}}
								<li>
									<a href="/news">{{this.name}}</a>
								</li>
			{{/each}}
								</ul>
							</div>
							<div>
			{{#each newsItems}} 
				{{#if @first}}
								<a hrefs="/news"><img src="images/{{this.img}}" alt="Img"</a>
								<h2><a href="/news">{{this.name}}</a></h2>
								<span {{this.time}}<br> by: {{this.author}}</span>
								{{{this.desc}}}
				{{/if}}
			{{/each}}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		{{> footer}}
	</div>
</body>
</html>